@model TeamsHelper.WebApp.RegisterViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    @using (Html.BeginForm("RegisterPost", "Register", FormMethod.Post))
    {
        <div style="margin-bottom: 10px;">
            <span>Display Name</span>
            <br/>
            @Html.TextBoxFor(x => x.DisplayName)
        </div>
        
        <div style="margin-bottom: 10px;">
            <span>Email Address</span>
            <br/>
            @Html.TextBoxFor(x => x.EmailAddress)
        </div>
        
        <div style="margin-bottom: 10px;">
            <span>Password</span>
            <br/>
            @Html.PasswordFor(x => x.Password)
        </div>
        
        <br/>
        <br/>
        <input type="submit"/>
    }
</div>
</body>
</html>